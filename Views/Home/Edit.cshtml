@using crudelicious.Models
@model Dish

<link rel="stylesheet" href="~/css/site.css"/>
<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
<body>
<nav class="navbar navbar-expand-lg navbar-light bg-dark">
    <h1 class="white mr-auto text">@Model.Name</h1>
    <a href="/" class="btn btn-info">Home</a>
</nav>
<div class="container">
    <div class='row container'>
        <form asp-action="EditSubmit" asp-controler="Home" method="post">
            <div class="form-group">
                <span class="red" asp-validation-for="Chef"></span>
                <label asp-for="Chef">Chef's Name:</label>
                <input asp-for="Chef" class="form-control" value="@ViewBag.Chef">
            </div>
            <div class="form-group">
                <span class="red" asp-validation-for="Name"></span>
                <label asp-for="Name">Name of Dish:</label>
                <input asp-for="Name" class="form-control" value="@ViewBag.Name">
            </div>
            <div class="form-group">
                <span class="red" asp-validation-for="Calories"></span>
                <label asp-for="Calories"># of Calories: </label>
                <input asp-for="Calories" class="form-control" value="@ViewBag.Calories">
            </div>
            <div class="form-group">
                <span class="red" asp-validation-for="Tastiness"></span>
                <label asp-for="Tastiness">Tastiness: </label>
                <input asp-for="Tastiness" class="form-control" value="@ViewBag.Tastiness">
            </div>
            <div class="form-group">
                <span class="red" asp-validation-for="Description"></span>
                <label asp-for="Description">Description: </label>
                <input asp-for="Description" class="form-control" value="@ViewBag.Description">
            </div>
            <button type="submit" class="btn btn-primary">Update Dish</button>
        </form>
    </div>
</div>
</body>